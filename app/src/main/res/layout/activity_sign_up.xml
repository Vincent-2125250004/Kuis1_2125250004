<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/activity4">

    <TextView
        android:id="@+id/tv_registrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="#0D47A1"
        />

    <TextView
        android:id="@+id/tv_createyouraccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_registrasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:text="Create your new account"
        />

    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_createyouraccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:drawableStart="@drawable/ic_person_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Full Name"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <Spinner
        android:id="@+id/sp_negara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_fullname"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:entries="@array/arr_negara"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_negara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_email_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Email"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Password"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <EditText
        android:id="@+id/et_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Confirm Password"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_confirmpassword"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        app:cornerRadius="12dp"
        android:text="Sign Up"
        android:backgroundTint="#1A237E"
        android:padding="12dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>