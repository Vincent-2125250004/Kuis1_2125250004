<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/activity2">

    <TextView
        android:id="@+id/tv_welcomeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="Welcome Back"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_subslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcomeback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:text="Log In to your account"
        android:textColor="@color/white"

        />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subslogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:drawableStart="@drawable/ic_person_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Username"
        android:padding="12dp"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <EditText
        android:id="@+id/et_passwordlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FBD3BD"
        android:hint="Password"
        android:padding="12dp"
        android:textStyle="bold"
        android:drawableTint="#0D47A1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/et_passwordlogin"
        android:text="Log In"
        android:layout_marginTop="45dp"
        app:cornerRadius="16dp"
        android:padding="12dp"
        android:backgroundTint="#0D47A1"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_login1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="OR"
        android:textColor="@color/white"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_or"
        android:text="Sign Up"
        android:layout_marginTop="32dp"
        app:cornerRadius="16dp"
        android:padding="12dp"
        android:backgroundTint="@color/white"
        android:textColor="#0D47A1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>