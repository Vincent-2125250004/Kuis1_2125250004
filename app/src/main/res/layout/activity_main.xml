<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/activity1">

    <TextView
        android:id="@+id/tv_palembangwater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palembang\nWater"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/tv_substype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_palembangwater"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:text="Menyediakan air bersih, sehat dan terjaga\nkualitasnya"
        android:textColor="@color/white"
        android:textStyle="bold"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_substype"
        android:text="Sign Up"
        android:layout_marginTop="50dp"
        app:cornerRadius="16dp"
        android:padding="12dp"
        android:backgroundTint="#0D47A1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup"
        android:text="Log In"
        android:layout_marginTop="25dp"
        app:cornerRadius="16dp"
        android:padding="12dp"
        android:backgroundTint="@color/white"
        android:textColor="#0D47A1"
        />

    <TextView
        android:id="@+id/tv_visitus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="16dp"
        android:text="Visit Us"
        android:textColor="@color/white"
        />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_visitus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_visitus"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="16dp"
        android:text="WWW.PALEMBANG.GO.ID"
        android:textColor="#0D47A1"
        android:padding="12dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>